<BorderPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ProyectoControlador">
   <top>
    
    <MenuBar BorderPane.alignment="CENTER">
      <menus>
        <Menu mnemonicParsing="false" text="Archivo">
          <items>
            <MenuItem onAction="#AbrirVentana" mnemonicParsing="false" text="Agregar Imágenes" />
            <MenuItem mnemonicParsing="false" text="Guardar Cambios" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cerrar" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edición">
          <items>
            
            <MenuItem mnemonicParsing="false" text="Seleccionar para Eliminar" />
            <MenuItem mnemonicParsing="false" text="Seleccionar para Editar" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Eliminar" />
            
          </items>
        </Menu>
         <Menu mnemonicParsing="false"  text="Gráficas">
          <items>
            <MenuItem mnemonicParsing="false" text="Momento 0" />
            <MenuItem mnemonicParsing="false" text="Momento 1" />
            <MenuItem mnemonicParsing="false" text="Momento 2" />
            <MenuItem mnemonicParsing="false" text="Momento 3" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Todos los momentos"/>
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Ayuda">
          <items>
            <MenuItem mnemonicParsing="false" text="Acerca de SCA" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
   </top>
  <center>
  
  <ScrollPane fx:id="scroll" hbarPolicy="NEVER" >
         <GridPane fx:id="grid" alignment="CENTER">
           
         </GridPane>
   </ScrollPane>
   </center>
     <bottom>
     
     	 <HBox  prefHeight="25.0">
         <children>
         <Label fx:id="inicio" onMouseClicked="#MostrarInicio" text="  Inicio">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="textoProyecto"  onMouseClicked="#MostrarProyecto"  text="Proyecto">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            
         </children>
      </HBox>
